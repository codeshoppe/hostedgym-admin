.row
  .col-xs-12
    h2
      = "Posts "
      = link_to 'Create Post', new_post_path, class: 'btn btn-primary btn-sm'

    table.table.table-striped
      thead
        tr
          th Title
          th Text
          th
      tbody
       - @posts.each do |post|
         tr
           td = post.title
           td = post.body
           td.pull-right.btn-toolbar
             = link_to 'Edit', edit_post_path(post), class: 'btn btn-warning btn-sm'
             = link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm'
